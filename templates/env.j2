{% if not minimize %}
# Generated .env template
# Stack: {{ stack if stack else 'Custom' }}
# Type: {{ type if type else 'Custom' }}
# Environment: {{ env if env else 'Custom' }}
# Generated on: {{ now }}
#
{% endif %}
{% for k, v in vars.items() %}
{% if format_style == 'uppercase' %}
{{ k|upper }}={{ v }}
{% elif format_style == 'lowercase' %}
{{ k|lower }}={{ v }}
{% elif format_style == 'quoted' %}
{{ k }}="{{ v }}"
{% elif format_style == 'export' %}
export {{ k }}={{ v }}
{% else %}
{{ k }}={{ v }}
{% endif %}
{% endfor %}
